<LoginButtons>:
    size_hint: None, None

    RelativeLayout:
        pos: self.parent.pos
        size: self.parent.size

        BoxLayout:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            #pos: self.parent.pos
            size: self.parent.size
            orientation: "horizontal"

            spacing: 5

            Label:
                size_hint: .05, 1
                text: ""

            GridLayout:
                size_hint: .9, 1
                cols:1
                spacing: 7

                GridLayout:
                    cols: 1
                    size_hint: 1,.48
                    spacing:5

                    Label:
                        size_hint:1, .4
                        font_name: "Raleway-Regular.ttf"
                        text: "Rychlak International"
                        font_size:18
                        color: 0,0,0,1

                    Label:
                        size_hint: 1, .1
                        font_name: "Raleway-Regular.ttf"      
                        text: "Companion App"
                        font_size: 18
                        color:0.650980392157, 0.650980392157, 0.650980392157, 1

                    Label:
                        size_hint: 1, .1
                        text: ""

                TextInput:
                    size_hint:1,.12
                    hint_text: "User"
                    multiline: False
                    background_normal: "White.png"
                    background_active: "White.png"
                    font_size: .55*self.height
                    cursor_color: 0,0,0,1
                    foreground_color: 0,0,0,1

                TextInput:
                    size_hint:1,.12
                    hint_text: "Password"
                    multiline: False
                    password: True
                    font_size: .55*self.height
                    background_normal: "White.png"
                    background_active: "White.png"
                    cursor_color: 0,0,0,1
                    foreground_color: 0,0,0,1

                Button:
                    size_hint:1,.12
                    font_size: .55*self.height
                    text: "Login"
                    background_normal: ""
                    background_color: 0.501960784314, 0.898039215686, 1.0, 1

                Button:
                    size_hint:1,.12
                    font_size: .55*self.height
                    text: "Create Account"
                    background_normal: ""
                    background_color: 0.501960784314, 0.898039215686, 1.0, 1

                Label:
                    size_hint:1,.1
                    text: ""

            Label:
                size_hint: .05, 1
                text: ""

<Background>:
    AnchorLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "LoginBackground.png"
        size: self.parent.size
        anchor_x: 'center'
        anchor_y: 'center'
        LoginButtons:
            size_hint: .8,.5

<LoginScreen>:
    FloatLayout:
        Background:
            center: 0.5, 0.5