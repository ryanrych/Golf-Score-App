<LoginButtons>:
    size_hint: None, None

    RelativeLayout:
        pos: self.parent.pos
        size: self.parent.size

        GridLayout:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            cols:1
            spacing: 5
            Label:
                text: ""

            TextInput:
                size_hint:1,.15
                hint_text: "User"
                multiline: False
            TextInput:
                size_hint:1,.15
                hint_text: "Password"
                multiline: False
                password: True

            Button:
                size_hint:1,.15
                text: "Login"

            Button:
                size_hint:1,.15
                text: "Create Account"

            Label:
                text: ""

<Background>:
    AnchorLayout:
        canvas.before:
            Color:
                rgba: .05, .8, .3, 1
            Rectangle:
                pos: self.pos
                size: self.size
        size: self.parent.size
        anchor_x: 'center'
        anchor_y: 'center'
        LoginButtons:
            size_hint: .8,.8

<LoginScreen>:
    FloatLayout:
        Background:
            center: 0.5, 0.5