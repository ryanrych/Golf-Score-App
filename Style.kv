                    background_normal: ""
                    background_color: app.hexToKivyColor("#008ae6",1)
                    on_release:
                        app.root.transition = CardTransition(direction = "down",mode = "pop")
                        app.root.current = "LoginScreen"

                Label:
                    size_hint:1,.08
                    text: ""

            Label:
                size_hint: .05, 1
                text: ""




<CreateAccountBackground>:
    AnchorLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "CreateBackground.jpg"
        size: self.parent.size
        anchor_x: 'center'
        anchor_y: 'center'
        CreateAccountButtons:
            size_hint: .8,.45

<CreateAccountScreen>:
    name: "CreateAccountScreen"
    FloatLayout:
        CreateAccountBackground: